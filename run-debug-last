#!/bin/bash

# Script to run LocalRouter in debug mode
# Starts both frontend dev server and backend binary

set -e

# Colors for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Store PIDs
FRONTEND_PID=""
BACKEND_PID=""

# Cleanup function
cleanup() {
    echo -e "\n${RED}Shutting down...${NC}"

    if [ ! -z "$FRONTEND_PID" ]; then
        echo -e "${BLUE}Stopping frontend (PID: $FRONTEND_PID)${NC}"
        kill $FRONTEND_PID 2>/dev/null || true
    fi

    if [ ! -z "$BACKEND_PID" ]; then
        echo -e "${BLUE}Stopping backend (PID: $BACKEND_PID)${NC}"
        kill $BACKEND_PID 2>/dev/null || true
    fi

    echo -e "${GREEN}Cleanup complete${NC}"
    exit 0
}

# Set up trap to catch Ctrl+C and other termination signals
trap cleanup SIGINT SIGTERM

echo -e "${GREEN}Starting LocalRouter in debug mode...${NC}"

# Check if binary exists
if [ ! -f "./target/debug/localrouter" ]; then
    echo -e "${RED}Error: ./target/debug/localrouter not found${NC}"
    echo "Please run 'cargo build' first"
    exit 1
fi

# Start frontend dev server
echo -e "${BLUE}Starting frontend dev server...${NC}"
npm run dev &
FRONTEND_PID=$!
echo -e "${GREEN}Frontend started (PID: $FRONTEND_PID)${NC}"

# Wait a bit for frontend to start
sleep 3

# Start backend
echo -e "${BLUE}Starting backend...${NC}"
./target/debug/localrouter &
BACKEND_PID=$!
echo -e "${GREEN}Backend started (PID: $BACKEND_PID)${NC}"

echo -e "\n${GREEN}LocalRouter is running!${NC}"
echo -e "Frontend: http://localhost:1420"
echo -e "API: http://localhost:3625"
echo -e "\nPress ${RED}Ctrl+C${NC} to stop both processes\n"

# Wait for both processes
wait
